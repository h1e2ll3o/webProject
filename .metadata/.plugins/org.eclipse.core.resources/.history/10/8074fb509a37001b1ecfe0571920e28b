	String email2 = request.getParameter("email2");
	String email = email1 + '@' + email2;
	
	if(id == null || pw == null || name == null || email1 == null){
		PrintWriter script = response.getWriter();
		script.println("<script>");
		script.println("alert('빈칸을 확인해 주세요')");
